{
  "name": "incident-backend",
  "version": "1.0.0",
  "description": "My Moleculer-based microservices project",
  "scripts": {
    "dev": "moleculer-runner --repl --hot services/**/*.service.js",
    "start": "moleculer-runner",
    "cli": "moleculer connect NATS",
    "build": "echo 'No build required for this project.'",
    "ci": "jest --watch",
    "test": "jest --coverage",
    "dc:up": "docker-compose up --build -d",
    "dc:logs": "docker-compose logs -f",
    "dc:down": "docker-compose down"
  },
  "keywords": [
    "microservices",
    "moleculer"
  ],
  "author": "",
  "devDependencies": {
    "jest": "^27.5.1",
    "jest-cli": "^27.5.1",
    "moleculer-repl": "^0.7.4"
  },
  "dependencies": {
    "@slack/web-api": "^7.8.0",
    "bcrypt": "^5.1.1",
    "cloudinary": "^2.5.1",
    "cors": "^2.8.5",
    "dayjs": "^1.11.13",
    "dotenv": "^16.4.7",
    "ioredis": "^5.4.2",
    "jsonwebtoken": "^9.0.2",
    "localizedFormat": "link:dayjs\\plugin\\localizedFormat",
    "moleculer": "^0.14.35",
    "moleculer-db": "^0.8.26",
    "moleculer-db-adapter-mongo": "^0.4.21",
    "moleculer-db-adapter-sequelize": "^0.2.18",
    "moleculer-web": "^0.10.7",
    "nats": "^2.29.1",
    "pg": "^8.13.1",
    "timezone": "link:dayjs\\plugin\\timezone",
    "twilio": "^5.4.2",
    "utc": "link:dayjs\\plugin\\utc"
  },
  "engines": {
    "node": ">= 16.x.x"
  },
  "jest": {
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "rootDir": "./services",
    "roots": [
      "../test"
    ]
  },
  "pnpm": {
    "ignoredBuiltDependencies": [
      "bcrypt",
      "es5-ext"
    ],
    "onlyBuiltDependencies": [
      "bcrypt",
      "es5-ext"
    ]
  }
}
